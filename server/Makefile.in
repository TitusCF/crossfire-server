VPATH = @srcdir@
srcdir = @srcdir@

LOCAL_LIBRARIES = ../common/libcross.a ../random_maps/random_map.a ../socket/socket.a


SRCS = \
	alchemy.c\
	apply.c\
	attack.c\
	ban.c\
	c_chat.c\
	c_misc.c\
	c_move.c\
	c_new.c\
	c_object.c\
	c_party.c\
	c_wiz.c\
	commands.c\
	daemon.c\
	disease.c\
	egoitem.c \
	encounter.c\
	hiscore.c\
	gods.c\
	init.c\
	input.c\
	login.c\
	main.c\
	monster.c\
	move.c\
	pets.c\
	player.c\
	resurrection.c\
	rune.c\
	shop.c\
	skills.c\
	skill_util.c\
	spell_effect.c\
	spell_util.c\
	swamp.c\
	swap.c\
	time.c

ALLFILES = $(SRCS) Makefile.in

DEPEND = @DEPEND@

SED = @SED@

OBJS = $(SRCS:.c=.o)

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include -I$(srcdir)/../include

LIBS = @LIBS@ $(EXTRA_LIBS)

SHELL = @BOURNE_SHELL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

INSTALL = @INSTALL@

MKDIR = @MKDIR@
CC = @CC@
RM = @RM@

crossfire: $(OBJS) $(LOCAL_LIBRARIES)
	$(RM) -f $@
	$(CC) -o $@ $(OBJS) $(LOCAL_LIBRARIES) $(LIBS) 


../common/libcross.a:
	(cd ../common; $(MAKE) $(MFLAGS) all)

../random_maps/random_map.a:
	(cd ../random_maps; $(MAKE) $(MFLAGS) all)

../socket/socket.a:
	(cd ../socket; $(MAKE) $(MFLAGS) all)

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -I../include -- $(SRCS)

proto:
	cextract +p -P $(INCLUDES)  \
		$(SRCS)  >../include/sproto.h.bak
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/__inline/d" < ../include/sproto.h.bak > ../include/sproto.h
	chmod 644 ../include/sproto.h
	$(RM) -f ../include/sproto.h.bak

archive:
	@if [ ! -d $(ARCHIVE)/server ]; then $(MKDIR) $(ARCHIVE)/server; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/server

clean::
	$(RM) -f crossfire $(OBJS) Makefile.bak

distclean:: clean
	$(RM) -f Makefile

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $*.c

all: crossfire

patchlist::
	@echo $(SRCS) > .patchlist

install:: crossfire
	@if [ ! -d ${bindir} ]; then \
		$(MKDIR) -p ${bindir}; \
	fi
	$(INSTALL) crossfire ${bindir}/crossfire

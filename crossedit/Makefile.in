VPATH = @srcdir@
srcdir= @srcdir@

SRCS = \
	crossedit.c \
	Attr.c \
	CrFace.c \
	CrEdit.c \
	CrList.c \
	CrUtil.c \
	Edit.c \
	App.c \
	Bitmaps.c \
	Str.c \
	xutil.c

HDRS = \
	CrFace.h \
	CrFaceP.h \
	CrEdit.h \
	CrEditP.h \
	CrList.h \
	CrListP.h \
	CrUtil.h \
	App.h \
	Edit.h \
	Bitmaps.h \
	Str.h \
	Attr.h \
	Crossedit.ad.h \
	Defines.h  \
	proto.h

OBJS = $(SRCS:.c=.o)


ALLFILES = README TODO Makefile.in Crossedit.ad Crossedit.ad.h  \
	$(SRCS) $(HDRS) png.c

SUBDIRS = include Cnv bitmaps doc

DEPEND = makedepend

X11LIBS= @X_LIBS@ @X_EXTRA_LIBS@ @X11LIBS@

LIBS = @LIBS@ @LDFLAGS@ $(X11LIBS)

INCLUDES= -I@x_includes@/ $(EXTRA_INCLUDES) -I../include -I. -Iinclude \
	-I$(srcdir)/../include -I$(srcdir) -I$(srcdir)/include \
	-ICnv -I$(srcdir)/Cnv @CPPFLAGS@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

INSTALL = @INSTALL@

MKDIR = @MKDIR@
CC = @CC@
RM = @RM@
#

crossedit: $(OBJS) ../common/libcross.a Cnv/libCnv.a
	$(RM) -f $@
	$(CC) -o $@ $(OBJS) ../common/libcross.a Cnv/libCnv.a $(LIBS)


../common/libcross.a:
	(cd ../common; $(MAKE) $(MFLAGS) all)

Cnv/libCnv.a:
	(cd Cnv; $(MAKE) $(MFLAGS) all)

Crossedit.ad.h: Crossedit.ad
	-../utils/ad2c.script Crossedit.ad > Crossedit.ad.h


depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -I../include -Iinclude -ICnv -I. -- $(SRCS)
	(cd Cnv; $(MAKE) depend)

proto:
	cproto -e $(INCLUDES) $(SRCS)  > proto.h.bak
	mv proto.h.bak proto.h
	chmod 644 proto.h

archive:
	@if [ ! -d $(ARCHIVE)/crossedit ]; then $(MKDIR) $(ARCHIVE)/crossedit; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/crossedit
	@for dir in $(SUBDIRS); \
	do \
	    echo "making archive in $$dir..."; \
	    $(MAKE) -C $$dir $(MFLAGS) 'MFLAGS=$(MFLAGS)' 'ARCHIVE=$(ARCHIVE)'  'VERSION=$(VERSION)' 'MKDIR=$(MKDIR)' 'CP=$(CP)' archive; \
	done;

clean::
	$(RM) -f crossedit $(OBJS) Makefile.bak
	(cd Cnv; $(MAKE) clean)

distclean:: clean
	@for dir in $(SUBDIRS); \
	do \
	    (echo "making distclean in $$dir..."; \
	    cd $$dir; $(MAKE) $(MFLAGS) 'MFLAGS=$(MFLAGS)' 'ARCHIVE=$(ARCHIVE)'  'VERSION=$(VERSION)' 'MKDIR=$(MKDIR)' 'CP=$(CP)' 'RM=$(RM)' distclean;) \
	done;
	$(RM) -f Makefile

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -I../include -I. -Iinclude -ICnv -c $*.c

all: crossedit

all:
	(cd Cnv; $(MAKE) all)


patchlist::
	@echo $(ALLFILES) > .patchlist
	(cd Cnv; $(MAKE) patchlist)


install:: crossedit
	@if [ ! -d ${bindir} ]; then \
		$(MKDIR) -p ${bindir}; \
	fi
	$(INSTALL) crossedit ${bindir}/crossedit

SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	anim.c \
	arch.c\
	button.c\
	exp.c\
	friend.c\
	glue.c\
	holy.c\
	info.c\
	image.c \
	init.c\
	item.c\
	links.c\
	living.c\
	loader.c\
	logger.c\
	los.c\
	map.c\
	object.c\
	porting.c\
	player.c\
	re-cmp.c\
	readable.c\
	recipe.c\
	shstr.c\
	time.c\
	treasure.c\
	utils.c

ALLFILES=loader.l $(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@
FLEX = @LEX@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include -I$(srcdir)/../include

SED= @SED@

libcross.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::


proto:
	cproto -e -o ../include/libproto.h.bak $(INCLUDES) \
	$(SRCS)
	$(SED) -e "s/__signed/signed/g" -e "/inline/d" -e "/YY_BUFFER/d" < ../include/libproto.h.bak > ../include/libproto.h
	chmod 644 ../include/libproto.h
	$(RM) -f ../include/libproto.h.bak

archive:
	if [ ! -d $(ARCHIVE)/common ]; then $(MKDIR) $(ARCHIVE)/common; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/common

loader.c: loader.l
	$(FLEX) -i -t loader.l > loader.c


clean::
	$(RM) -f $(OBJS)

distclean:: clean
	$(RM) -f Makefile libcross.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: libcross.a


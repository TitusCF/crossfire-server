SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	info.c \
	init.c \
	item.c\
	loop.c \
	lowlevel.c\
	metaserver.c\
	request.c\
	sounds.c

ALLFILES=$(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include -I$(srcdir)/../include

SED= @SED@

socket.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::

proto:
	cextract +Ap -P -o ../include/libproto.h.bak $(INCLUDES) \
	-cpp-program="gcc -E -C" \
	$(SRCS)
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/inline/d" -e "/YY_BUFFER/d" < ../include/libproto.h.bak > ../include/sockproto.h
	chmod 644 ../include/sockproto.h
	$(RM) -f ../include/sockproto.h.bak

archive:
	if [ ! -d $(ARCHIVE)/socket ]; then $(MKDIR) $(ARCHIVE)/socket; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/socket

clean:
	$(RM) -f $(OBJS) Makefile.bak

distclean: clean
	$(RM) -f Makefile socket.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: socket.a

